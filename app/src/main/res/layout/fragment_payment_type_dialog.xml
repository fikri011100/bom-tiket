<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".utils.dialog.PaymentTypeDialogFragment">

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_line_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dana"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorBlueSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_dana"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_ovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OVO"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorBlueSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ovo"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_gopay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOPAY"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorBlueSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_gopay"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_shopee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopee Pay"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorBlueSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>